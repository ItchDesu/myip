<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Mi IP</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="bg-white shadow-lg rounded-lg p-8 text-center">
    <h1 class="text-2xl font-bold mb-4">Mi direcci√≥n IP</h1>
    <p class="text-lg">IPv4: <span id="ipv4" class="font-mono">Cargando...</span></p>
    <p class="text-lg">IPv6: <span id="ipv6" class="font-mono">Cargando...</span></p>
  </div>
  <script>
    fetch('/api/ip')
      .then(res => res.json())
      .then(data => {
        document.getElementById('ipv4').textContent = data.ipv4 || 'No disponible';
        document.getElementById('ipv6').textContent = data.ipv6 || 'No disponible';
      })
      .catch(() => {
        document.getElementById('ipv4').textContent = 'Error';
        document.getElementById('ipv6').textContent = 'Error';
      });
  </script>
</body>
</html>
